#include <stdio.h>
#include <stdlib.h>
int main()
{
    int a, b, c, d, e, f, A, B;
    system("chcp 1251");
    system("cls");
    printf("Введите номер отдельными цифрами!\n");
   
    printf("Выберите первое значение - ");
    scanf_s("%d", &a);

    printf("Выберите второе значение - ");
    scanf_s("%d", &b);

    printf("Выберите третье значение - ");
    scanf_s("%d", &c);

    printf("Выберите четвёртое значение - ");
    scanf_s("%d", &d);

    printf("Выберите пятое значение - ");
    scanf_s("%d", &e);

    printf("Выберите шестое значение - ");
    scanf_s("%d", &f);

    A = a + b + c;
    B = d + e + f;

    if (A == B)
    {
        printf("Это счталивый билет!");
    }
    else
    {
        printf("Удачи в следующий раз(");
    }
    return 0;
}


\\ решение2


#include <stdio.h>

int main()
{
    int n, a1, a2, s1, s2;
    printf("Input your number:\n");
    scanf_s("%d", &n);
    if(n > 999999 || n < 100000)
    {
        printf("Use 6-digit number");
        return 0;
    }
    a1 = n / 1000;
    s1 = (a1 / 100) + (a1 / 10 % 10) + (a1 % 10);
    a2 = n % 1000;
    s2 = (a2 / 100) + (a2 / 10 % 10) + (a2 % 10);
    if (s1 == s2) {
        printf("You are lucky!");
    }
    else {
        printf("You are not!");
    }
}
