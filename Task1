#include <stdio.h>
#include <math.h>

int main()
{
	

	  float catet1 = 0;
	  float catet2 = 0;
	  float hepet = 0;
	  float square = 0;
	
	printf("choose catet1:\n");
	scanf_s("%f", &catet1);

	printf("choose catet2:\n");
	scanf_s("%f", &catet2);

	  square = catet1 * catet2 * 0.5;
	  hepet = catet1 * catet1 + catet2 * catet2;
      hepet = sqrt(hepet);

	printf("your square = %.2f\n", square);
	printf("ypor hepet = %.2f\n", hepet);



	return 0;
}
