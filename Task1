#include <iostream>
#include <stdlib.h>
#include <math.h>

int main()
{
	system("chcp 1251");
	system("cls");

	float катет1 = 0;
	float катет2 = 0;
	float гипотенуза = 0;
	float площадь = 0;
	
	printf("Выберите первый катет:\n");
	scanf_s("%f", &катет1);

	printf("Выбирите второй катет:\n");
	scanf_s("%f", &катет2);

	площадь = катет1 * катет2 * 0.5;
	гипотенуза = катет1 * катет1 + катет2 * катет2;
	гипотенуза = sqrt(гипотенуза);

	printf("площадь = %.2f\n", площадь);
	printf("гипотенуза = %.2f\n", гипотенуза);



	return 0;
}
